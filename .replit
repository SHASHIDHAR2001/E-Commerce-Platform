modules = ["java-graalvm22.3"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["rabbitmq-server"]

[[ports]]
localPort = 4369
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8080
externalPort = 8080

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Inventory Service"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Order Service"

[[workflows.workflow]]
name = "Inventory Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd inventory-service && java -jar target/inventory-service-1.0.0.jar"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Order Service"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd order-service && java -jar target/order-service-1.0.0.jar"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"
